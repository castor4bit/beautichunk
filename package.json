{
  "name": "beautichunk",
  "version": "0.1.0",
  "description": "Transform obfuscated JavaScript files into readable, chunked modules",
  "main": "dist/index.js",
  "bin": {
    "beautichunk": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check --write src tests",
    "lint:check": "biome check src tests",
    "format": "biome format --write src tests",
    "format:check": "biome format src tests",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint:check && npm run format:check"
  },
  "keywords": [
    "javascript",
    "beautify",
    "chunk",
    "obfuscation",
    "code-splitting"
  ],
  "author": "Toru Tanaka",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=20.0.0 <25.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "commander": "^14.0.0"
  }
}
